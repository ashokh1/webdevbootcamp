<% include ../partials/header %>
<div class="container">
    <div class="row"></div>
    <h1 style="text-align: center;">Edit <%= campgroundedit.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campgroundedit._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campgroundedit.name %>" name="campground[name]">
            </div>  
            <div class="form-group">
                    <input class="form-control" type=" number" value="<%= campgroundedit.price %>" name="campground[price]" min="0.0" step="0.01">
            </div> 
            <div class="form-group">  
                <input class="form-control" type="text" value="<%= campgroundedit.image %>" name="campground[imageurl]">
            </div>  
            <div class="form-group">  
                <input class="form-control" type="text" value="<%= campgroundedit.description %>" name="campground[description]">
            </div> 
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>      
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>